<zk xmlns:n="native" xmlns:x="xhtml" xmlns:zk="zk" >
<style>
.btns {
    width: 500px;
    margin: 0 auto;
}
.initial-content .btn {
    position: relative;
    padding: 8px 0 8px 36px;
    margin-bottom: 8px;
    font-weight: 500;
    line-height: 1.5em;
    width: 100%;
}
.initial-content .btn-f-b span {
    left: 12px;
    margin-top: -13px;
    background-position: -510px -226px;
    background-repeat: no-repeat;
    overflow: hidden;
    display: block;
    width: 12px;
    height: 26px;
}
.btn-f-b, .btn-f-b .disabled, .btn-f-b[disabled] {
    border-color: #3b5998;
    background: #3b5998;
    color: #fff;
}
.btn-google, .btn-google .disabled, .btn-google[disabled] {
    border-color: #dd4b39;
    background: #dd4b39;
    color: #fff;
}
.initial-content .btn-google span {
    left: 8px;
    margin-top: -10px;
    background-position: -466px -270px;
    background-repeat: no-repeat;
    overflow: hidden;
    display: block;
    width: 32px;
    height: 20px;
}
.css-sprite-index {
    background-image: url(//ds055uzetaobb.cloudfront.net/site_media/version-Vebaaf1a383/build_sprites/css-sprite-index.png);
}

.initial-content .btn span {
    position: absolute;
    top: 50%;
}

</style>
